@model List<Team>
@{
    int count = 0;
}

<h1>
    Team
    <a class="btnav btn-primary" asp-action="Create">Create</a>
</h1>

<div class="Container">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">Position</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td><div style="width:100px">
                        <img width=:100% src="~/Upload/Team/@item.ImgUrl"/> 
                    </div></td>
                    <td><a class="btn btn-secondary" asp-action="update" asp-route="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route="@item.Id">Delete</a>
                    
  
                    </td>
                </tr>
            }

        </tbody>
    </table>
</divc>